#recipes
  .row
    - if current_user
      .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1.new-recipe-button
        = link_to 'New Recipe', new_recipe_path, class: 'new-recipe-btn btn btn-default pull-right'

    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1#recipes-container
      %hr
      = render 'recipes/published_recipes', has_more_results: @has_more_results
