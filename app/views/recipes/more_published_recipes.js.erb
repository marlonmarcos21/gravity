$('#recipes-container').append("<%= escape_javascript(render('published_recipes', recipes: @recipes, has_more_results: @has_more_results, next_page: @next_page)) %>");

var moreResults = "<%= @has_more_results %>" 
var nextPage = "<%= @next_page %>"
var checker = true
$(window).scroll(function() {
  var scrolled = parseInt($(window).scrollTop());
  var height = parseInt($(document).height() - $(window).height()) - 100;
  if (scrolled >= height  && checker === true && moreResults === 'true') {
    $('.published-recipes-pagination').hide();
    $.ajax({
      method: 'GET',
      url: "<%= more_published_recipes_recipes_path %>",
      dataType: 'script',
      data: { page: nextPage }
    });
    checker = false;
  }
});
