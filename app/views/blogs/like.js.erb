const blogId = "<%= @blog.id %>";
const persisted = "<%= @like.persisted? %>";
const totalLikes = "<%= @total_likes %>";
const parent = $(`#thumbs-up-${blogId}`).parent('a');
if (persisted === 'true') {
  $(`#thumbs-up-${blogId}`).attr('class', 'fa fa-thumbs-up');
  parent.attr('href', `/posts/${blogId}/unlike`);
} else {
  $(`#thumbs-up-${blogId}`).attr('class', 'fa fa-thumbs-o-up');
  parent.attr('href', `/posts/${blogId}/like`);
}
if (totalLikes == '0') {
  $(`#thumbs-up-text-${blogId}`).text('Ayus ba? |');
} else {
  $(`#thumbs-up-text-${blogId}`).text(`${totalLikes} ka Ayus! |`);
}
