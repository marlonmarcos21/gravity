#blogs
  .row
    - if current_user
      .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
        = link_to 'New Blog', new_blog_path, class: 'new-blog-btn btn btn-default pull-right'

    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1#blogs-container
      %hr
      = render 'blogs/published_blogs', has_more_results: @has_more_results, through_category: @through_category
