!!! 5
%html(lang="en")
  %head
    %title= content_for?(:title) ? yield(:title) : 'Gravity'
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    = render 'shared/meta'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js'
    - if cookies[:dark_mode]
      = stylesheet_link_tag 'application_dark', media: 'all', 'data-turbolinks-track': 'reload'
    - else
      = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'
    %link{ href: '//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel: 'stylesheet', type: 'text/css' }
    %link{ href: '//fonts.googleapis.com/css?family=Montserrat:400,700', rel: 'stylesheet', type: 'text/css' }
    = yield(:header_scripts) if content_for?(:header_scripts)

  %body#page-top{ 'data-spy' => 'scroll', 'data-target' => '.navbar-fixed-top' }
    = render 'shared/navbar'

    - if bootstrap_flash
      .col-md-8.col-md-offset-2
        = bootstrap_flash

    .container.content-section
      #ajax-flash-msg
      = yield
      #scroll-up
        %a.page-scroll{ 'page-scroll' => true, href: '#page-top' }
          = fa_icon 'chevron-up 2x'

    %footer
      .container.text-center
        %p
          Copyright &copy; Gravity
          = Time.zone.now.strftime '%Y'

    = javascript_include_tag 'application'
    = javascript_pack_tag 'channels/consumer', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'channels/gravity', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'trix_upload', 'data-turbolinks-track': 'reload'
    = yield(:footer_scripts) if content_for?(:footer_scripts)
