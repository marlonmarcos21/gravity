$('#published-posts-tab').append("<%= escape_javascript(render('published_posts', posts: @published_posts, has_more_results: @has_more_results, next_page: @next_page)) %>");

var moreResults = "<%= @has_more_results %>" 
var nextPage = "<%= @next_page %>"
var checker = true
$(window).scroll(function() {
  if ($('#published-posts-tab').is(':visible')) {
    var scrolled = parseInt($(window).scrollTop());
    var height = parseInt($(document).height() - $(window).height()) - 120;
    if (scrolled >= height  && checker === true && moreResults === 'true') {
      $('.published-posts-pagination').show();
      $.ajax({
        method: 'GET',
        url: "<%= more_published_posts_user_path %>",
        dataType: 'script',
        data: { page: nextPage }
      });
      checker = false;
    }
  }
});
