#posts
  - if current_user
    .row
      .col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
        #post-index-form
          = render 'form', is_remote: true
          %hr

  .row
    .col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1#posts-container
      = render 'published_posts', has_more_results: @has_more_results
