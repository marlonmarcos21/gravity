- content_for :header_scripts do
  = stylesheet_pack_tag 'application'

.container
  %h5= "Hi #{current_user.first_name}"
  #users= render @users

  %a.send-message{ href: '#', onclick: 'sendMessage("Bon", "Yo!")' }
    = "Send Message"

  = react_component('ChatList')

- content_for :footer_scripts do
  = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  :javascript
    function sendMessage(sentBy, body) {
      Packs.application.sendMessage(sentBy, body);
    }
